{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "cargo watch -x run -w ../../.env",
      "options": {
        "cwd": "${workspaceFolder}/src/backend"
      },
      "problemMatcher": ["$rustc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "bun run dev",
      "options": {
        "cwd": "${workspaceFolder}/src/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "sui-mumble"
      },
      "group": "build"
    },
    {
        "label": "Docker Compose Up",
        "type": "shell",
        "command": "docker compose up",
        "args": [],
        "presentation": {
            "reveal": "always",
            "panel": "new"
        },
        "group": "test"
    },
    {
        "label": "Run Mumble Server",
        "type": "shell",
        "command": "docker compose up murmur",
        "args": [],
        "presentation": {
            "reveal": "always",
            "panel": "new"
        },
        "group": "test"
    },
    {
      "label": "Generate Test Data",
      "type": "shell",
      "command": "python3 scripts/seed_test_data.py",
      "options": {
        "cwd": "${workspaceFolder}/src/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": "test"
    },
    {
      "label": "Setup Admin (Scetrov)",
      "type": "shell",
      "command": "python3 scripts/setup_admin.py",
      "options": {
        "cwd": "${workspaceFolder}/src/backend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": "test"
    },
    {
      "label": "Build All",
      "type": "shell",
      "command": "./scripts/build-all.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Stub API",
      "type": "shell",
      "command": "cargo watch -x 'run --bin stub_api'",
      "options": {
        "cwd": "${workspaceFolder}/src/backend",
        "env": {
          "DATABASE_URL": "sqlite::memory:",
          "JWT_SECRET": "stub-jwt-secret",
          "FRONTEND_URL": "http://localhost:4173"
        }
      },
      "problemMatcher": ["$rustc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "test"
    },
    {
      "label": "Run Preview",
      "type": "shell",
      "command": "bun run preview",
      "options": {
        "cwd": "${workspaceFolder}/src/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "test"
    },
    {
      "label": "Dev",
      "dependsOn": ["Run Backend", "Run Frontend"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "E2E Dev",
      "dependsOn": ["Run Stub API", "Run Preview"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
