{
	"name": "SuiMumble Dev Container",
	"image": "mcr.microsoft.com/devcontainers/rust:1-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "20"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"vadimcn.vscode-lldb",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"forwardPorts": [5038, 5173],
	"postCreateCommand": "bun install --prefix src/sui && cd src/rust && cargo fetch"
}
